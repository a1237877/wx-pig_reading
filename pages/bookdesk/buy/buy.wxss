/* pages/bookdesk/buy/buy.wxss */
.section{
  width: 100%; 
}
.searchBar{
  display: flex;
  justify-content: center;
  height: 100rpx;
  background: #ff6700;
}
.searchBar .searBar-box{
  display: inline-block;
  width: 95%;
  height: 60rpx; 
  margin-top: 26rpx;
  border-radius: 40rpx;
  background: #fff;
}
.searBar-box.tap{
  background: rgba(255,247,231,.9);
}
.search-plac{
  text-align: center;
  font-size: 11pt;
  margin-top: 4rpx;
}
.searBar-box .search-icon{
  position: absolute;
  left: 36%;
  top: 35rpx;
  width: 44rpx;
  height: 44rpx;
}

.section-swiper .slide{
  width: 100%;
  height: 380rpx;
}
.section-swiper .slide-image{
  width: 100%;
  display: block;
}
.navBar{
  margin-top: 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 160rpx;
  background: #fff;
}
.nav-list{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav-item{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  margin: 0 36rpx;
}
.nav-item .item-img{
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx
}
.nav-item .item-text{
  font-size: 26rpx;
  margin-top: 10rpx;
  color:#999;
}
.navBar:before{
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  top: 700rpx;
  border-bottom: 5px solid #f6f6f6;
}

.goods-list{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  margin-top: 0rpx; 
  background: #fff;
}
.goods-item{
  width: 360rpx;
  margin-bottom: 30rpx;
}
.goods-item:nth-child(1),.goods-item:nth-child(2){
  margin-top: 8rpx;
}
.goods-item .goods-img{
  position: relative;
  width: 360rpx;
  height: 360rpx;
  box-shadow: 0 0 6rpx #dcdcdc;
}
.goods-item text{
  line-height: 40rpx;
  word-spacing: 10rpx;
}
.goods-item text:nth-child(1),.goods-item text:nth-child(2),.goods-item text:nth-child(3){
  display: block;
  margin-left: 30rpx;
}
.goods-item .title{
  font-size: 11pt;
}
.goods-item .desp{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 9pt;
  color: #666;
}
.goods-item .meta{
  margin-left: 30rpx;
  font-size: 11pt;
  color: #ff4a00;
}
.goods-item .discount{
  display: inline-block;
  margin-left: 10rpx;
  font-size: 9pt;
  color: #666;
  text-decoration: line-through;
}