/* pages/leader/leader.wxss */
.page_hd{
  width: 100%;
  height: 100rpx;
  background: #ffffff
}
.page_hd:before{
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  top: 85rpx;
  border-bottom: 1px solid #f6f6f6;
}
.page_hd-title{
  font-size: 36rpx;
  font-weight: bold;
  color: #444444;
}
.center{
  display: flex;
  justify-content: center;
  align-items: center;
}
.seachBar{
  justify-content: center;
  height: 100rpx;
  background: #ff6700;
  margin-top: -30rpx;
}
.searchBar .searBar-box{
  display: inline-block;
  width:100%;
  height: 50rpx;
  margin-top: 5rpx;
  border-radius: 40rpx;
  background: #f6f6f6;
}
.searBar-box.tap{
  background: rgba(255,247,231,.9);
}
.search-plac{
  text-align: center;
  font-size: 11pt;
  margin-top: 2rpx;
}
.searBar-box .search-icon{
  position: absolute;
  left: 60%;
  top: 110rpx;
  width: 44rpx;
  height: 44rpx;
}
.page_bd-head{
  display: flex;
  height: 128rpx;
}
.page_bd-head image{
  width: 66rpx;
  height: 66rpx;
  line-height: 66rpx;
  border-radius: 50%;
  margin-left: 28rpx;
}
.page_bd-head .author{
  display: inline-block;
  margin-top: 8rpx;
  margin-left: 28rpx;
  font-size: 28rpx;
  color: #444;
}
.flex{
  display: flex;
  align-items: center;
}
.page_bd-banner image{
  margin-top: -46rpx;
  width: 688rpx;
  height: 302rpx;
  border-radius: 15rpx
}
.page_bd-middle{
  margin-top: 30rpx;
}
.page_bd-middle .title{
  margin-left: 34rpx;
  font-size: 44rpx;
  color: #444;
  font-weight: bold;
  margin-bottom: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  line-clamp: 2;
}
.page_bd-middle .content{
  font-size: 32rpx;
  color: #7f7f7f;
  margin-bottom: 28rpx;
  margin-left: 30rpx;
  /* overflow: hidden;
  text-overflow: ellipsis;
  line-clamp: 2; */
  word-break:break-all;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  overflow:hidden;
  
}
.page_bd-foot{
  height: 92rpx;
}
.page_bd-foot .foot-left{
  float: left;
  margin-left: 30rpx;
  color: #c6c6c6;
  font-size: 28rpx;
}
.page_bd-foot .foot-right{
  float: right;
  color: #c6c6c6;
  font-size: 28rpx;
  margin-right: 72rpx;  
}
.icon image{
  width: 28rpx;
  height: 28rpx;
  transform: translate(44rpx, -42rpx);

}
.page_bd-foot:after {
  content: "";
  position: absolute;
  right: 0;
  left: 0;
  bottom: 18rpx;
  border-top: 16rpx solid #F6F6F6;
}

